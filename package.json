{
  "name": "khinsider-downloader",
  "version": "1.0.2",
  "description": "A utility for downloading media from khinsider.",
  "main": "bin/index.ts",
  "scripts": {
    "test": "cross-env TEST_MODE=1 jest",
    "test:coverage": "npm test -- --coverage",
    "start": "ts-node src/app.ts",
    "clean": "ts-node scripts/rimraf-multi.ts -p=bin,coverage,dist,temp",
    "build": "tsc",
    "rebuild": "npm run clean && npm run build",
    "sync-version": "ts-node scripts/sync-version.ts",
    "postversion": "npm run sync-version",
    "prebundle": "npm run rebuild",
    "bundle": "npm run bundle:windows && npm run bundle:mac && npm run bundle:linux",
    "bundle:windows": "cross-env nexe dist/app.js --output=./bin/khinsider-winx64 --target=win32-x64-22.16.0 --build",
    "bundle:mac": "cross-env nexe dist/app.js --output=./bin/khinsider-winx64 --target=darwin-22.16.0 --build",
    "bundle:linux": "cross-env nexe dist/app.js --output=./bin/khinsider-winx64 --target=linux-x64-22.16.0 --build",
    "postbundle": "ts-node scripts/rename-binaries.ts && ts-node scripts/archive-files.ts"
  },
  "keywords": [
    "khinsider",
    "soundtracks",
    "downloader",
    "music",
    "media"
  ],
  "author": "Jacob Heater <jacobheater@gmail.com>",
  "license": "MIT",
  "devDependencies": {
    "@babel/preset-typescript": "^7.27.1",
    "@jest/globals": "^30.0.0-beta.3",
    "@types/archiver": "^6.0.3",
    "@types/download": "^8.0.5",
    "@types/fs-extra": "^11.0.4",
    "@types/jest": "^29.5.14",
    "@types/jsdom": "^21.1.7",
    "@types/node": "^22.15.29",
    "@types/rimraf": "^4.0.5",
    "@types/uuid": "^10.0.0",
    "@types/yargs": "^17.0.33",
    "archiver": "^7.0.1",
    "cross-env": "^7.0.3",
    "fast-glob": "^3.3.3",
    "jest": "^29.7.0",
    "nexe": "^5.0.0-beta.4",
    "rimraf": "^6.0.1",
    "ts-jest": "^29.3.4",
    "typescript": "^5.8.3",
    "uuid": "^11.1.0"
  },
  "dependencies": {
    "axios": "^1.9.0",
    "commander": "^14.0.0",
    "download": "^8.0.0",
    "fs-extra": "^11.3.0",
    "jsdom": "^26.1.0",
    "ts-node": "^10.9.2",
    "winston": "^3.17.0"
  }
}
